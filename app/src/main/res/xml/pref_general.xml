<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.preference.PreferenceCategory
        android:title="Appearance">

        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="dark_theme"
            android:title="Dark Theme"
            android:defaultValue="false" />

        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="colour_navbar"
            android:title="Coloured navigation bar"
            android:summary="Tints the navigation bar to the colour of the status bar"
            android:defaultValue="false" />

        <android.support.v7.preference.Preference
            android:key="primary_colour"
            android:title="Primary colour"
            android:summary="Sets the apps primary colour" />

    </android.support.v7.preference.PreferenceCategory>

    <android.support.v7.preference.PreferenceCategory
        android:title="Advanced">

        <android.support.v7.preference.Preference
            android:key="reset_app"
            android:title="Reset the apps data"
            android:summary="Equivalent to wiping the apps data from settings" />

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>
